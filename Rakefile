begin
  gem 'jeweler'
  require 'jeweler'
  Jeweler::Tasks.new do |gemspec|
    gemspec.name = "quality_extensions"
    gemspec.summary = "A collection of reusable Ruby methods which are not (yet) in Facets."
    gemspec.email = "github.com@tylerrick.com"
    gemspec.homepage = "http://github.com/TylerRick/quality_extensions"
    gemspec.authors = ["Tyler Rick", "and others"]
  end
rescue LoadError
  puts "Jeweler not available. Install it with: gem install jeweler"
end
